# Loopback Interface
auto lo
iface lo inet loopback

{% if ethernet_interface is not none %}

# Ethernet Interface
allow-hotplug {{ ethernet_interface }}
iface {{ ethernet_interface }} inet dhcp

{% endif %}


{% if wireless_interface is not none %}

# Wireless Interface
auto {{ wireless_interface }}
